<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for local network IPs -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <!-- Add your local network IP ranges -->
        <domain includeSubdomains="true">192.168.0.0</domain>
        <domain includeSubdomains="true">192.168.1.0</domain>
        <domain includeSubdomains="true">10.0.0.0</domain>
    </domain-config>
    
    <!-- For development: Allow all cleartext traffic (REMOVE IN PRODUCTION) -->
    <!-- Uncomment the line below if you need to allow all HTTP traffic during development -->
    <!-- <base-config cleartextTrafficPermitted="true" /> -->
</network-security-config>
